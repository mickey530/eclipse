package game.accessmodifier;

public class Commoner {
	// private 요소는 자식쪽에서도 조회나 수정이 불가능합니다.
	// 보안성이 제일 뛰어나기 때문에 private을 무조건 써야한다면
	// setter, getter 라는 것들을 이용해 보조합니다.
	private int hp;
	private int mp;
	private int lv;
	private int exp;
	
	public Commoner() {
		this.hp = 20;
		this.mp = 10;
		this.lv = 1;
		this.exp = 0;
	}
	// setter / getter 의 기본형을 만드는 방법은
	// 마우스 우클릭 > source > generate getter / setter 를 선택해 자동으로
	// 생성해줄 수 있습니다.

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getMp() {
		return mp;
	}

	public void setMp(int mp) {
		this.mp = mp;
	}

	public int getLv() {
		return lv;
	}

	public void setLv(int lv) {
		this.lv = lv;
	}

	public int getExp() {
		return exp;
	}

	public void setExp(int exp) {
		this.exp = exp;
	}
}
